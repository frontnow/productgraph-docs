{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Product Graph API Documentation",
  "description": "Documentation for the Product Graph API",
  "colors": {
    "primary": "#6B7280",
    "light": "#9CA3AF",
    "dark": "#4B5563"
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@productgraph.org"
      }
    ],
    "primary": {
      "type": "button",
      "label": "API Dashboard",
      "href": "https://dashboard.productgraph.org"
    }
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Developer Portal",
          "href": "https://productgraph.org/developer",
          "icon": "browser"
        },
        {
          "anchor": "API Status",
          "href": "https://status.frontnow.com",
          "icon": "server"
        },
        {
          "anchor": "Support",
          "href": "https://support.productgraph.org",
          "icon": "headset"
        }
      ]
    },
    "groups": [
      {
        "group": "Overview",
        "icon": "book-open",
        "pages": [
          "introduction",
          "quickstart",
          "changelog"
        ]
      },
      {
        "group": "Product Graph API",
        "icon": "cube",
        "pages": [
          {
            "group": "Getting Started",
            "icon": "play",
            "pages": [
              "product-graph/index",
              "product-graph/overview",
              "product-graph/authentication",
              "product-graph/credits",
              "product-graph/multilanguage"
            ]
          },
          {
            "group": "Core API",
            "icon": "code",
            "pages": [
              "product-graph/search",
              "product-graph/brand",
              "product-graph/product-data",
              "product-graph/historical-data"
            ]
          },
          {
            "group": "Advanced Features",
            "icon": "rocket",
            "pages": [
              "product-graph/analytics",
              "product-graph/webhooks",
              "product-graph/best-practices",
              "product-graph/error-handling"
            ]
          }
        ]
      },
      {
        "group": "API Reference",
        "icon": "book",
        "pages": [
          "api-reference/introduction",
          {
            "group": "Products",
            "icon": "box",
            "pages": [
              "api-reference/products/get-all-products",
              "api-reference/products/create-a-new-product",
              "api-reference/products/get-product-by-id",
              "api-reference/products/update-product",
              "api-reference/products/delete-product",
              "api-reference/products/request-product-translation",
              "api-reference/products/get-product-history"
            ]
          },
          {
            "group": "Search",
            "icon": "magnifying-glass",
            "pages": [
              "api-reference/search/search-for-products",
              "api-reference/search/get-search-results"
            ]
          },
          {
            "group": "Brands",
            "icon": "building",
            "pages": [
              "api-reference/brands/get-brand-by-id",
              "api-reference/brands/search-for-brands"
            ]
          },
          {
            "group": "Credits",
            "icon": "credit-card",
            "pages": [
              "api-reference/credits/get-credit-balance"
            ]
          },
          {
            "group": "Webhooks",
            "icon": "bell",
            "pages": [
              "api-reference/webhooks/create-webhook",
              "api-reference/webhooks/list-webhooks",
              "api-reference/webhooks/get-webhook-details",
              "api-reference/webhooks/update-webhook",
              "api-reference/webhooks/delete-webhook"
            ]
          }
        ]
      }
    ]
  },
  "api": {
    "openapi": "/api-reference/openapi.json",
    "playground": {
      "display": "interactive"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/productgraph",
      "github": "https://github.com/productgraph",
      "linkedin": "https://linkedin.com/company/productgraph"
    }
  },
  "styling": {
    "eyebrows": "section",
    "codeblocks": "system"
  },
  "appearance": {
    "default": "system",
    "strict": true
  }
}
